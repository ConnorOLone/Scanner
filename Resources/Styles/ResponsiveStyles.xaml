<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Responsive Breakpoints and Styles -->
    
    <!-- Phone Portrait (< 600dp) -->
    <Style x:Key="PhonePortraitGrid" TargetType="Grid">
        <Setter Property="ColumnDefinitions" Value="*" />
        <Setter Property="RowDefinitions" Value="Auto,Auto" />
        <Setter Property="ColumnSpacing" Value="0" />
        <Setter Property="RowSpacing" Value="16" />
    </Style>

    <!-- Phone Landscape / Small Tablet (600-840dp) -->
    <Style x:Key="PhoneLandscapeGrid" TargetType="Grid">
        <Setter Property="ColumnDefinitions" Value="*,*" />
        <Setter Property="RowDefinitions" Value="Auto" />
        <Setter Property="ColumnSpacing" Value="16" />
        <Setter Property="RowSpacing" Value="0" />
    </Style>

    <!-- Tablet Portrait (840-1200dp) -->
    <Style x:Key="TabletPortraitGrid" TargetType="Grid">
        <Setter Property="ColumnDefinitions" Value="*,*" />
        <Setter Property="RowDefinitions" Value="Auto,Auto" />
        <Setter Property="ColumnSpacing" Value="24" />
        <Setter Property="RowSpacing" Value="24" />
    </Style>

    <!-- Desktop (> 1200dp) -->
    <Style x:Key="DesktopGrid" TargetType="Grid">
        <Setter Property="ColumnDefinitions" Value="*,*,*" />
        <Setter Property="RowDefinitions" Value="Auto,Auto" />
        <Setter Property="ColumnSpacing" Value="32" />
        <Setter Property="RowSpacing" Value="32" />
    </Style>

    <!-- Responsive Card Styles -->
    <Style x:Key="PhoneCard" TargetType="Border">
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="16,8" />
    </Style>

    <Style x:Key="TabletCard" TargetType="Border">
        <Setter Property="Padding" Value="24" />
        <Setter Property="Margin" Value="12" />
    </Style>

    <Style x:Key="DesktopCard" TargetType="Border">
        <Setter Property="Padding" Value="32" />
        <Setter Property="Margin" Value="16" />
    </Style>

    <!-- Responsive Typography -->
    <Style x:Key="PhoneHeading" TargetType="Label">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="TabletHeading" TargetType="Label">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="DesktopHeading" TargetType="Label">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <!-- Responsive Button Styles -->
    <Style x:Key="PhoneButton" TargetType="Button">
        <Setter Property="HeightRequest" Value="44" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="16,8" />
    </Style>

    <Style x:Key="TabletButton" TargetType="Button">
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="20,10" />
    </Style>

    <Style x:Key="DesktopButton" TargetType="Button">
        <Setter Property="HeightRequest" Value="52" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Padding" Value="24,12" />
    </Style>

    <!-- Responsive Input Styles -->
    <Style x:Key="PhoneEntry" TargetType="Entry">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <Style x:Key="TabletEntry" TargetType="Entry">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="MinimumHeightRequest" Value="48" />
    </Style>

    <Style x:Key="DesktopEntry" TargetType="Entry">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="MinimumHeightRequest" Value="52" />
    </Style>

</ResourceDictionary>