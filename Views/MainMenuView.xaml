<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Scanner.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Scanner.Resources"
             Title="Main Menu"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource Gray100}">

    <Grid RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                BackgroundColor="{StaticResource Primary}"
                Padding="0,25,0,20">
            <Border.Shadow>
                <Shadow Brush="{StaticResource Black}"
                        Offset="0,5"
                        Radius="18"
                        Opacity="0.4" />
            </Border.Shadow>

            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackLayout Grid.Column="0"
                             Spacing="4">
                    <Label Text="Item Movement Scanner"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{StaticResource White}" />
                    <Label Text="Forensic Science Northern Ireland"
                           FontSize="14"
                           TextColor="{StaticResource White}"
                           Opacity="0.9" />
                </StackLayout>

                <Image Source="fsni_logo.png"
                       HeightRequest="55"
                       Grid.Column="1">
                    <Image.Shadow>
                        <Shadow Brush="{StaticResource Black}"
                                Offset="10,5"
                                Radius="68"
                                Opacity="1" />
                    </Image.Shadow>
                </Image>
                <!-- <Button Grid.Column="1" -->
                <!--         x:Name="LogoutButton" -->
                <!--         Text="Lgout" -->
                <!--         BackgroundColor="Transparent" -->
                <!--         TextColor="{StaticResource White}" -->
                <!--         BorderColor="{StaticResource White}" -->
                <!--         BorderWidth="1" -->
                <!--         FontSize="12" -->
                <!--         HeightRequest="36" -->
                <!--         WidthRequest="70" -->
                <!--         CornerRadius="18" -->
                <!--         Clicked="OnLogoutClicked" /> -->
            </Grid>
        </Border>

        <!-- Menu Items -->
        <ScrollView Grid.Row="1"
                    Padding="24,24,24,0">
            <StackLayout Spacing="16">
                <!-- Primary Actions -->
                <Label Text="Primary Actions"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Gray600}"
                       Margin="0,0,0,8" />

                <Grid ColumnDefinitions="*,*"
                      RowDefinitions="Auto,Auto"
                      ColumnSpacing="16"
                      RowSpacing="16">

                    <!-- Move Item Card -->
                    <Border Grid.Row="0"
                            Grid.Column="0"
                            BackgroundColor="{StaticResource White}"
                            Stroke="Transparent"
                            StrokeThickness="0"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="{StaticResource Black}"
                                    Offset="0,-20"
                                    Radius="15"
                                    Opacity="0.18" />
                        </Border.Shadow>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding MoveItemCommand}" />
                        </Border.GestureRecognizers>

                        <StackLayout Spacing="12">
                            <Label Text="ðŸ“¦"
                                   FontSize="32"
                                   HorizontalOptions="Center" />
                            <Label Text="Move Item"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}"
                                   HorizontalOptions="Center" />
                            <Label Text="Transfer items between locations"
                                   FontSize="12"
                                   TextColor="{StaticResource Gray500}"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center" />
                        </StackLayout>
                    </Border>

                    <!-- Check Item Location Card -->
                    <Border Grid.Row="0"
                            Grid.Column="1"
                            BackgroundColor="{StaticResource White}"
                            Stroke="Transparent"
                            StrokeThickness="0"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="{StaticResource Black}"
                                    Offset="0,-20"
                                    Radius="15"
                                    Opacity="0.18" />
                        </Border.Shadow>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CheckLocationCommand}" />
                        </Border.GestureRecognizers>

                        <StackLayout Spacing="12">
                            <Label Text="ðŸ“"
                                   FontSize="32"
                                   HorizontalOptions="Center" />
                            <Label Text="Check Location"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}"
                                   HorizontalOptions="Center" />
                            <Label Text="Find current item location"
                                   FontSize="12"
                                   TextColor="{StaticResource Gray500}"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center" />
                        </StackLayout>
                    </Border>

                    <!-- Dispatch Items Card -->
                    <Border Grid.Row="1"
                            Grid.Column="0"
                            BackgroundColor="{StaticResource White}"
                            Stroke="Transparent"
                            StrokeThickness="0"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="{StaticResource Black}"
                                    Offset="0,-20"
                                    Radius="15"
                                    Opacity="0.18" />
                        </Border.Shadow>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding DispatchItemsCommand}" />
                        </Border.GestureRecognizers>

                        <StackLayout Spacing="12">
                            <Label Text="ðŸšš"
                                   FontSize="32"
                                   HorizontalOptions="Center" />
                            <Label Text="Dispatch Items"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}"
                                   HorizontalOptions="Center" />
                            <Label Text="Send items for delivery"
                                   FontSize="12"
                                   TextColor="{StaticResource Gray500}"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center" />
                        </StackLayout>
                    </Border>

                    <!-- Return Items Card -->
                    <Border Grid.Row="1"
                            Grid.Column="1"
                            BackgroundColor="{StaticResource White}"
                            Stroke="Transparent"
                            StrokeThickness="0"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="{StaticResource Black}"
                                    Offset="0,-20"
                                    Radius="15"
                                    Opacity="0.18" />
                        </Border.Shadow>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ReturnItemsTappedCommand}" />
                        </Border.GestureRecognizers>

                        <StackLayout Spacing="12">
                            <Label Text="â†©ï¸"
                                   FontSize="32"
                                   HorizontalOptions="Center" />
                            <Label Text="Return Items"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}"
                                   HorizontalOptions="Center" />
                            <Label Text="Process returned items"
                                   FontSize="12"
                                   TextColor="{StaticResource Gray500}"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center" />
                        </StackLayout>
                    </Border>
                </Grid>

                <!-- Box Management -->
                <Label Text="Box Management"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Gray600}"
                       Margin="0,24,0,8" />

                <!-- Track Box Card -->
                <Border BackgroundColor="{StaticResource White}"
                        Stroke="Transparent"
                        StrokeThickness="0"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource Black}"
                                Offset="0,-20"
                                Radius="15"
                                Opacity="0.18" />
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding TrackBoxTappedCommand}" />
                    </Border.GestureRecognizers>

                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Label Grid.Column="0"
                               Text="ðŸ“¦"
                               FontSize="24"
                               VerticalOptions="Center"
                               Margin="0,0,16,0" />

                        <StackLayout Grid.Column="1"
                                     Spacing="4">
                            <Label Text="Track Box"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}" />
                            <Label Text="Manage box movements and locations"
                                   FontSize="12"
                                   TextColor="{StaticResource Gray500}" />
                        </StackLayout>

                        <Label Grid.Column="2"
                               FontFamily="MaterialIcons"
                               Text="{x:Static local:MaterialDesignIcons.Search}"
                               FontSize="22"
                               TextColor="{StaticResource Primary}"
                               VerticalOptions="Center" />
                    </Grid>
                </Border>

                

               
            </StackLayout>
        </ScrollView>
       
    </Grid>
</ContentPage>