<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Scanner.Views.LoginPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Login"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource Primary}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Background Gradient -->
        <Rectangle Grid.RowSpan="3">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
                    <GradientStop Color="{StaticResource PrimaryDark}" Offset="1.0" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Login Card -->
        <Border Grid.Row="1" 
                BackgroundColor="{StaticResource White}"
                Stroke="Transparent"
                StrokeThickness="0"
                Margin="32,0"
                Padding="32,40">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16" />
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="{StaticResource Black}"
                        Offset="0,4"
                        Radius="16"
                        Opacity="0.15" />
            </Border.Shadow>

            <StackLayout Spacing="24">
                <!-- Logo/Title -->
                <StackLayout Spacing="8">
                    <Label Text="ðŸ“±"
                           FontSize="48"
                           HorizontalOptions="Center" />
                    <Label Text="Item Movement Scanner"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Gray900}"
                           HorizontalOptions="Center" />
                    <Label Text="Please sign in to continue"
                           FontSize="14"
                           TextColor="{StaticResource Gray500}"
                           HorizontalOptions="Center" />
                </StackLayout>

                <!-- Login Form -->
                <StackLayout Spacing="16">
                    <!-- Username Field -->
                    <StackLayout Spacing="8">
                        <Label Text="Username"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray600}" />
                        <Border BackgroundColor="{StaticResource Gray100}"
                                Stroke="{StaticResource Gray300}"
                                StrokeThickness="1"
                                Padding="16,12">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry x:Name="UsernameEntry"
                                   Placeholder="Enter your username"
                                   BackgroundColor="Transparent"
                                   FontSize="16"
                                   TextColor="{StaticResource Gray900}" />
                        </Border>
                    </StackLayout>

                    <!-- Password Field -->
                    <StackLayout Spacing="8">
                        <Label Text="Password"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray600}" />
                        <Border BackgroundColor="{StaticResource Gray100}"
                                Stroke="{StaticResource Gray300}"
                                StrokeThickness="1"
                                Padding="16,12">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry x:Name="PasswordEntry"
                                   Placeholder="Enter your password"
                                   IsPassword="True"
                                   BackgroundColor="Transparent"
                                   FontSize="16"
                                   TextColor="{StaticResource Gray900}" />
                        </Border>
                    </StackLayout>

                    <!-- Remember Me -->
                    <StackLayout Orientation="Horizontal" Spacing="8">
                        <CheckBox x:Name="RememberMeCheckBox"
                                  Color="{StaticResource Primary}" />
                        <Label Text="Remember me"
                               FontSize="14"
                               TextColor="{StaticResource Gray600}"
                               VerticalOptions="Center" />
                    </StackLayout>
                </StackLayout>

                <!-- Login Button -->
                <Button x:Name="LoginButton"
                        Text="Sign In"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="{StaticResource White}"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="48"
                        CornerRadius="8"
                        Clicked="OnLoginClicked">
                    <Button.Shadow>
                        <Shadow Brush="{StaticResource Primary}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.3" />
                    </Button.Shadow>
                </Button>

                <!-- Forgot Password -->
                <Label Text="Forgot Password?"
                       FontSize="14"
                       TextColor="{StaticResource Primary}"
                       HorizontalOptions="Center"
                       TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnForgotPasswordTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>
        </Border>

        <!-- Footer -->
        <StackLayout Grid.Row="2" 
                     VerticalOptions="End"
                     Margin="32,0,32,32">
            <Label Text="Â© 2025 Item Movement System"
                   FontSize="12"
                   TextColor="{StaticResource White}"
                   Opacity="0.8"
                   HorizontalOptions="Center" />
        </StackLayout>
    </Grid>
</ContentPage>