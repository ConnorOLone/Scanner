<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Scanner.Views.DispatchItemsView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Dispatch Items"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource Gray100}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                BackgroundColor="{StaticResource Primary}"
                Padding="0,25,0,20">
            <Border.Shadow>
                <Shadow Brush="{StaticResource Black}"
                        Offset="0,2"
                        Radius="8"
                        Opacity="0.1" />
            </Border.Shadow>
            
            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        x:Name="BackButton"
                        Text="â† Back"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource White}"
                        FontSize="16"
                        Clicked="OnBackClicked" />

                <StackLayout Grid.Column="1" 
                             Spacing="4"
                             HorizontalOptions="Start"
                             Margin="16,0,0,0">
                    <Label Text="Dispatch Items"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{StaticResource White}" />
                    <Label Text="Send items for delivery"
                           FontSize="14"
                           TextColor="{StaticResource White}"
                           Opacity="0.9" />
                </StackLayout>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollView Grid.Row="1" Padding="24">
            <StackLayout Spacing="24">
                <!-- Dispatch Information Card -->
                <Border BackgroundColor="{StaticResource White}"
                        Stroke="Transparent"
                        Padding="24">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource Black}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>

                    <StackLayout Spacing="16">
                        <Label Text="Dispatch Information"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray900}" />

                        <!-- Destination Field -->
                        <StackLayout Spacing="8">
                            <Label Text="Destination Address"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray600}" />
                            <Border BackgroundColor="{StaticResource Gray100}"
                                    Stroke="{StaticResource Gray300}"
                                    StrokeThickness="1"
                                    Padding="16,12"
                                    HeightRequest="100">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Editor x:Name="DestinationEditor"
                                        Placeholder="Enter full delivery address"
                                        BackgroundColor="Transparent"
                                        FontSize="14"
                                        TextColor="{StaticResource Gray900}" />
                            </Border>
                        </StackLayout>

                        <!-- Carrier Selection -->
                        <StackLayout Spacing="8">
                            <Label Text="Carrier Service"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray600}" />
                            <Border BackgroundColor="{StaticResource Gray100}"
                                    Stroke="{StaticResource Gray300}"
                                    StrokeThickness="1"
                                    Padding="16,12">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Picker x:Name="CarrierPicker"
                                        Title="Select a carrier"
                                        BackgroundColor="Transparent"
                                        FontSize="16"
                                        TextColor="{StaticResource Gray900}">
                                    <Picker.Items>
                                        <x:String>FedEx Standard</x:String>
                                        <x:String>FedEx Express</x:String>
                                        <x:String>UPS Ground</x:String>
                                        <x:String>UPS Next Day</x:String>
                                        <x:String>DHL Express</x:String>
                                        <x:String>USPS Priority</x:String>
                                        <x:String>Local Courier</x:String>
                                    </Picker.Items>
                                </Picker>
                            </Border>
                        </StackLayout>

                        <!-- Priority Toggle -->
                        <StackLayout Spacing="12">
                            <StackLayout Orientation="Horizontal" Spacing="12">
                                <Switch x:Name="UrgentDispatchSwitch"
                                        OnColor="{StaticResource Danger}"
                                        ThumbColor="{StaticResource White}" />
                                <Label Text="Urgent Dispatch"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Gray900}"
                                       VerticalOptions="Center" />
                            </StackLayout>
                            <Label Text="Enable for time-sensitive deliveries"
                                   FontSize="12"
                                   TextColor="{StaticResource Gray500}"
                                   Margin="44,0,0,0" />
                        </StackLayout>
                    </StackLayout>
                </Border>

                <!-- Items to Dispatch Card -->
                <Border BackgroundColor="{StaticResource White}"
                        Stroke="Transparent"
                        Padding="24">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource Black}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>

                    <StackLayout Spacing="16">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                                   Text="Items to Dispatch"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}" />
                            <Label Grid.Column="1"
                                   x:Name="ItemCountLabel"
                                   Text="0 items"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Primary}" />
                        </Grid>

                        <!-- Add Item Section -->
                        <StackLayout Spacing="8">
                            <Label Text="Add Item"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray600}" />
                            <Grid ColumnDefinitions="*,Auto,Auto">
                                <Border Grid.Column="0"
                                        BackgroundColor="{StaticResource Gray100}"
                                        Stroke="{StaticResource Gray300}"
                                        StrokeThickness="1"
                                        Padding="16,12">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8" />
                                    </Border.StrokeShape>
                                    <Entry x:Name="ItemIdEntry"
                                           Placeholder="Scan or enter item ID"
                                           BackgroundColor="Transparent"
                                           FontSize="16"
                                           TextColor="{StaticResource Gray900}" />
                                </Border>
                                <Button Grid.Column="1"
                                        x:Name="ScanButton"
                                        Text="ðŸ“·"
                                        BackgroundColor="{StaticResource Secondary}"
                                        TextColor="{StaticResource White}"
                                        FontSize="16"
                                        WidthRequest="48"
                                        HeightRequest="48"
                                        CornerRadius="8"
                                        Margin="8,0,0,0"
                                        Clicked="OnScanClicked" />
                                <Button Grid.Column="2"
                                        x:Name="AddItemButton"
                                        Text="+"
                                        BackgroundColor="{StaticResource Success}"
                                        TextColor="{StaticResource White}"
                                        FontSize="20"
                                        FontAttributes="Bold"
                                        WidthRequest="48"
                                        HeightRequest="48"
                                        CornerRadius="8"
                                        Margin="8,0,0,0"
                                        Clicked="OnAddItemClicked" />
                            </Grid>
                        </StackLayout>

                        <!-- Items List -->
                        <CollectionView x:Name="ItemsCollectionView"
                                        ItemsSource="{Binding DispatchItems}"
                                        HeightRequest="200">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="0,8" ColumnDefinitions="*,Auto">
                                        <StackLayout Grid.Column="0" Spacing="4">
                                            <Label Text="{Binding ItemId}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="{StaticResource Gray900}" />
                                            <Label Text="{Binding Location}"
                                                   FontSize="12"
                                                   TextColor="{StaticResource Gray500}" />
                                        </StackLayout>
                                        <Button Grid.Column="1"
                                                Text="Ã—"
                                                BackgroundColor="{StaticResource Danger}"
                                                TextColor="{StaticResource White}"
                                                FontSize="16"
                                                FontAttributes="Bold"
                                                WidthRequest="32"
                                                HeightRequest="32"
                                                CornerRadius="16"
                                                CommandParameter="{Binding}"
                                                Clicked="OnRemoveItemClicked" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                            <CollectionView.EmptyView>
                                <StackLayout Padding="20" HorizontalOptions="Center">
                                    <Label Text="ðŸ“¦"
                                           FontSize="48"
                                           HorizontalOptions="Center"
                                           Opacity="0.3" />
                                    <Label Text="No items added yet"
                                           FontSize="14"
                                           TextColor="{StaticResource Gray500}"
                                           HorizontalOptions="Center" />
                                </StackLayout>
                            </CollectionView.EmptyView>
                        </CollectionView>
                    </StackLayout>
                </Border>

                <!-- Action Buttons -->
                <StackLayout Spacing="12">
                    <Button x:Name="CreateDispatchButton"
                            Text="Create Dispatch Order"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="{StaticResource White}"
                            FontSize="16"
                            FontAttributes="Bold"
                            HeightRequest="48"
                            CornerRadius="8"
                            Clicked="OnCreateDispatchClicked">
                        <Button.Shadow>
                            <Shadow Brush="{StaticResource Primary}"
                                    Offset="0,2"
                                    Radius="8"
                                    Opacity="0.3" />
                        </Button.Shadow>
                    </Button>

                    <Button x:Name="ClearAllButton"
                            Text="Clear All Items"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource Gray600}"
                            BorderColor="{StaticResource Gray300}"
                            BorderWidth="1"
                            FontSize="16"
                            HeightRequest="48"
                            CornerRadius="8"
                            Clicked="OnClearAllClicked" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>