<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Scanner.Views.MoveItemView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Move Item"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource Gray100}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                BackgroundColor="{StaticResource Primary}"
                Padding="0,25,0,20">
            <Border.Shadow>
                <Shadow Brush="{StaticResource Black}"
                        Offset="0,2"
                        Radius="8"
                        Opacity="0.1" />
            </Border.Shadow>
            
            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        x:Name="BackButton"
                        Text="â† Back"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource White}"
                        FontSize="16"
                        Clicked="OnBackClicked" />

                <StackLayout Grid.Column="1" 
                             Spacing="4"
                             HorizontalOptions="Start"
                             Margin="16,0,0,0">
                    <Label Text="Move Item"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{StaticResource White}" />
                    <Label Text="Transfer items between locations"
                           FontSize="14"
                           TextColor="{StaticResource White}"
                           Opacity="0.9" />
                </StackLayout>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollView Grid.Row="1" Padding="24">
            <StackLayout Spacing="24">
                <!-- Scan Item Card -->
                <Border BackgroundColor="{StaticResource White}"
                        Stroke="Transparent"
                        Padding="24">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource Black}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>

                    <StackLayout Spacing="16">
                        <Label Text="Item Information"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray900}" />

                        <!-- Item ID Field -->
                        <StackLayout Spacing="8">
                            <Label Text="Item ID / Barcode"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray600}" />
                            <Grid ColumnDefinitions="*,Auto">
                                <Border Grid.Column="0"
                                        BackgroundColor="{StaticResource Gray100}"
                                        Stroke="{StaticResource Gray300}"
                                        StrokeThickness="1"
                                        Padding="16,12">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8" />
                                    </Border.StrokeShape>
                                    <Entry x:Name="ItemIdEntry"
                                           Placeholder="Scan or enter item ID"
                                           BackgroundColor="Transparent"
                                           FontSize="16"
                                           TextColor="{StaticResource Gray900}" />
                                </Border>
                                <Button Grid.Column="1"
                                        x:Name="ScanButton"
                                        Text="ðŸ“·"
                                        BackgroundColor="{StaticResource Secondary}"
                                        TextColor="{StaticResource White}"
                                        FontSize="16"
                                        WidthRequest="48"
                                        HeightRequest="48"
                                        CornerRadius="8"
                                        Padding="0"
                                        Margin="8,0,0,0"
                                        Clicked="OnScanClicked" />
                            </Grid>
                        </StackLayout>

                        <!-- Current Location Display -->
                        <StackLayout x:Name="CurrentLocationSection" 
                                     Spacing="8"
                                     IsVisible="False">
                            <Label Text="Current Location"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray600}" />
                            <Border BackgroundColor="{StaticResource PrimaryLight}"
                                    Stroke="{StaticResource Primary}"
                                    StrokeThickness="1"
                                    Padding="16,12">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Label x:Name="CurrentLocationLabel"
                                       Text="Loading..."
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Primary}" />
                            </Border>
                        </StackLayout>
                    </StackLayout>
                </Border>

                <!-- Destination Card -->
                <Border x:Name="DestinationCard"
                        BackgroundColor="{StaticResource White}"
                        Stroke="Transparent"
                        Padding="24"
                        IsVisible="False">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource Black}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>

                    <StackLayout Spacing="16">
                        <Label Text="Move Destination"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray900}" />

                        <!-- Destination Location Field -->
                        <StackLayout Spacing="8">
                            <Label Text="New Location"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray600}" />
                            <Border BackgroundColor="{StaticResource Gray100}"
                                    Stroke="{StaticResource Gray300}"
                                    StrokeThickness="1"
                                    Padding="16,12">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Entry x:Name="DestinationEntry"
                                       Placeholder="Enter destination location"
                                       BackgroundColor="Transparent"
                                       FontSize="16"
                                       TextColor="{StaticResource Gray900}" />
                            </Border>
                        </StackLayout>

                        <!-- Exceptional Transfer Toggle -->
                        <StackLayout Spacing="12">
                            <StackLayout Orientation="Horizontal" Spacing="12">
                                <Switch x:Name="ExceptionalTransferSwitch"
                                        OnColor="{StaticResource Warning}"
                                        ThumbColor="{StaticResource White}" />
                                <Label Text="Exceptional Transfer"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Gray900}"
                                       VerticalOptions="Center" />
                            </StackLayout>
                            <Label Text="Enable for special circumstances or urgent moves"
                                   FontSize="12"
                                   TextColor="{StaticResource Gray500}"
                                   Margin="44,0,0,0" />
                        </StackLayout>

                        <!-- Notes Field -->
                        <StackLayout Spacing="8">
                            <Label Text="Notes (Optional)"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray600}" />
                            <Border BackgroundColor="{StaticResource Gray100}"
                                    Stroke="{StaticResource Gray300}"
                                    StrokeThickness="1"
                                    Padding="16,12"
                                    HeightRequest="80">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Editor x:Name="NotesEditor"
                                        Placeholder="Add any additional notes..."
                                        BackgroundColor="Transparent"
                                        FontSize="14"
                                        TextColor="{StaticResource Gray900}" />
                            </Border>
                        </StackLayout>
                    </StackLayout>
                </Border>

                <!-- Action Buttons -->
                <StackLayout x:Name="ActionButtonsSection" 
                             Spacing="12"
                             IsVisible="False">
                    <Button x:Name="MoveItemButton"
                            Text="Move Item"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="{StaticResource White}"
                            FontSize="16"
                            FontAttributes="Bold"
                            HeightRequest="48"
                            CornerRadius="8"
                            Clicked="OnMoveItemClicked">
                        <Button.Shadow>
                            <Shadow Brush="{StaticResource Primary}"
                                    Offset="0,2"
                                    Radius="8"
                                    Opacity="0.3" />
                        </Button.Shadow>
                    </Button>

                    <Button x:Name="ClearButton"
                            Text="Clear Form"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource Gray600}"
                            BorderColor="{StaticResource Gray300}"
                            BorderWidth="1"
                            FontSize="16"
                            HeightRequest="48"
                            CornerRadius="8"
                            Clicked="OnClearClicked" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>