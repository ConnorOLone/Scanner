<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Scanner.Views.ReturnItemsView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Return Items"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource Gray100}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                BackgroundColor="{StaticResource Primary}"
                Padding="0,25,0,20">
            <Border.Shadow>
                <Shadow Brush="{StaticResource Black}"
                        Offset="0,2"
                        Radius="8"
                        Opacity="0.1" />
            </Border.Shadow>
            
            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        x:Name="BackButton"
                        Text="â† Back"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource White}"
                        FontSize="16"
                        Clicked="OnBackClicked" />

                <StackLayout Grid.Column="1" 
                             Spacing="4"
                             HorizontalOptions="Start"
                             Margin="16,0,0,0">
                    <Label Text="Return Items"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{StaticResource White}" />
                    <Label Text="Process returned items"
                           FontSize="14"
                           TextColor="{StaticResource White}"
                           Opacity="0.9" />
                </StackLayout>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollView Grid.Row="1" Padding="24">
            <StackLayout Spacing="24">
                <!-- Return Information Card -->
                <Border BackgroundColor="{StaticResource White}"
                        Stroke="Transparent"
                        Padding="24">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource Black}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>

                    <StackLayout Spacing="16">
                        <Label Text="Return Information"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray900}" />

                        <!-- Return Reason -->
                        <StackLayout Spacing="8">
                            <Label Text="Return Reason"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray600}" />
                            <Border BackgroundColor="{StaticResource Gray100}"
                                    Stroke="{StaticResource Gray300}"
                                    StrokeThickness="1"
                                    Padding="16,12">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Picker x:Name="ReturnReasonPicker"
                                        Title="Select return reason"
                                        BackgroundColor="Transparent"
                                        FontSize="16"
                                        TextColor="{StaticResource Gray900}">
                                    <Picker.Items>
                                        <x:String>Defective/Damaged</x:String>
                                        <x:String>Wrong Item Shipped</x:String>
                                        <x:String>Customer Return</x:String>
                                        <x:String>Warranty Return</x:String>
                                        <x:String>Quality Issue</x:String>
                                        <x:String>Expired/Outdated</x:String>
                                        <x:String>Recall</x:String>
                                        <x:String>Other</x:String>
                                    </Picker.Items>
                                </Picker>
                            </Border>
                        </StackLayout>

                        <!-- Return Destination -->
                        <StackLayout Spacing="8">
                            <Label Text="Return Destination"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray600}" />
                            <Border BackgroundColor="{StaticResource Gray100}"
                                    Stroke="{StaticResource Gray300}"
                                    StrokeThickness="1"
                                    Padding="16,12">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Picker x:Name="DestinationPicker"
                                        Title="Select destination"
                                        BackgroundColor="Transparent"
                                        FontSize="16"
                                        TextColor="{StaticResource Gray900}">
                                    <Picker.Items>
                                        <x:String>Quality Control</x:String>
                                        <x:String>Refurbishment Center</x:String>
                                        <x:String>Disposal/Recycling</x:String>
                                        <x:String>Return to Supplier</x:String>
                                        <x:String>Main Inventory</x:String>
                                        <x:String>Quarantine Area</x:String>
                                    </Picker.Items>
                                </Picker>
                            </Border>
                        </StackLayout>

                        <!-- Notes Field -->
                        <StackLayout Spacing="8">
                            <Label Text="Additional Notes"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray600}" />
                            <Border BackgroundColor="{StaticResource Gray100}"
                                    Stroke="{StaticResource Gray300}"
                                    StrokeThickness="1"
                                    Padding="16,12"
                                    HeightRequest="80">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Editor x:Name="NotesEditor"
                                        Placeholder="Add details about the return condition, damage, etc."
                                        BackgroundColor="Transparent"
                                        FontSize="14"
                                        TextColor="{StaticResource Gray900}" />
                            </Border>
                        </StackLayout>
                    </StackLayout>
                </Border>

                <!-- Items to Return Card -->
                <Border BackgroundColor="{StaticResource White}"
                        Stroke="Transparent"
                        Padding="24">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource Black}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>

                    <StackLayout Spacing="16">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                                   Text="Items to Return"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}" />
                            <Label Grid.Column="1"
                                   x:Name="ItemCountLabel"
                                   Text="0 items"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Primary}" />
                        </Grid>

                        <!-- Add Item Section -->
                        <StackLayout Spacing="8">
                            <Label Text="Add Return Item"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray600}" />
                            <Grid ColumnDefinitions="*,Auto,Auto">
                                <Border Grid.Column="0"
                                        BackgroundColor="{StaticResource Gray100}"
                                        Stroke="{StaticResource Gray300}"
                                        StrokeThickness="1"
                                        Padding="16,12">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8" />
                                    </Border.StrokeShape>
                                    <Entry x:Name="ItemIdEntry"
                                           Placeholder="Scan or enter item ID"
                                           BackgroundColor="Transparent"
                                           FontSize="16"
                                           TextColor="{StaticResource Gray900}" />
                                </Border>
                                <Button Grid.Column="1"
                                        x:Name="ScanButton"
                                        Text="ðŸ“·"
                                        BackgroundColor="{StaticResource Secondary}"
                                        TextColor="{StaticResource White}"
                                        FontSize="16"
                                        WidthRequest="48"
                                        HeightRequest="48"
                                        CornerRadius="8"
                                        Margin="8,0,0,0"
                                        Clicked="OnScanClicked" />
                                <Button Grid.Column="2"
                                        x:Name="AddItemButton"
                                        Text="+"
                                        BackgroundColor="{StaticResource Success}"
                                        TextColor="{StaticResource White}"
                                        FontSize="20"
                                        FontAttributes="Bold"
                                        WidthRequest="48"
                                        HeightRequest="48"
                                        CornerRadius="8"
                                        Margin="8,0,0,0"
                                        Clicked="OnAddItemClicked" />
                            </Grid>
                        </StackLayout>

                        <!-- Items List -->
                        <CollectionView x:Name="ItemsCollectionView"
                                        ItemsSource="{Binding ReturnItems}"
                                        HeightRequest="200">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border BackgroundColor="{StaticResource Gray100}"
                                            Stroke="{StaticResource Gray300}"
                                            StrokeThickness="1"
                                            Margin="0,4"
                                            Padding="16,12">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="8" />
                                        </Border.StrokeShape>
                                        <Grid ColumnDefinitions="*,Auto,Auto">
                                            <StackLayout Grid.Column="0" Spacing="4">
                                                <Label Text="{Binding ItemId}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource Gray900}" />
                                                <Label Text="{Binding OriginalLocation}"
                                                       FontSize="12"
                                                       TextColor="{StaticResource Gray500}" />
                                            </StackLayout>
                                            <Border Grid.Column="1"
                                                    BackgroundColor="{Binding StatusColor}"
                                                    Padding="8,4"
                                                    Margin="8,0">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="12" />
                                                </Border.StrokeShape>
                                                <Label Text="{Binding Status}"
                                                       FontSize="10"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource White}" />
                                            </Border>
                                            <Button Grid.Column="2"
                                                    Text="Ã—"
                                                    BackgroundColor="{StaticResource Danger}"
                                                    TextColor="{StaticResource White}"
                                                    FontSize="16"
                                                    FontAttributes="Bold"
                                                    WidthRequest="32"
                                                    HeightRequest="32"
                                                    CornerRadius="16"
                                                    CommandParameter="{Binding}"
                                                    Clicked="OnRemoveItemClicked" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                            <CollectionView.EmptyView>
                                <StackLayout Padding="20" HorizontalOptions="Center">
                                    <Label Text="â†©ï¸"
                                           FontSize="48"
                                           HorizontalOptions="Center"
                                           Opacity="0.3" />
                                    <Label Text="No return items added yet"
                                           FontSize="14"
                                           TextColor="{StaticResource Gray500}"
                                           HorizontalOptions="Center" />
                                </StackLayout>
                            </CollectionView.EmptyView>
                        </CollectionView>
                    </StackLayout>
                </Border>

                <!-- Action Buttons -->
                <StackLayout Spacing="12">
                    <Button x:Name="ProcessReturnsButton"
                            Text="Process Returns"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="{StaticResource White}"
                            FontSize="16"
                            FontAttributes="Bold"
                            HeightRequest="48"
                            CornerRadius="8"
                            Clicked="OnProcessReturnsClicked">
                        <Button.Shadow>
                            <Shadow Brush="{StaticResource Primary}"
                                    Offset="0,2"
                                    Radius="8"
                                    Opacity="0.3" />
                        </Button.Shadow>
                    </Button>

                    <Button x:Name="ClearAllButton"
                            Text="Clear All Items"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource Gray600}"
                            BorderColor="{StaticResource Gray300}"
                            BorderWidth="1"
                            FontSize="16"
                            HeightRequest="48"
                            CornerRadius="8"
                            Clicked="OnClearAllClicked" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>