<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Scanner.Views.CheckLocationPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Check Location"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource Gray100}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                BackgroundColor="{StaticResource Primary}"
                Padding="0,25,0,20">
            <Border.Shadow>
                <Shadow Brush="{StaticResource Black}"
                        Offset="0,2"
                        Radius="8"
                        Opacity="0.1" />
            </Border.Shadow>
            
            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        x:Name="BackButton"
                        Text="← Back"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource White}"
                        FontSize="16"
                        Clicked="OnBackClicked" />

                <StackLayout Grid.Column="1" 
                             Spacing="4"
                             HorizontalOptions="Start"
                             Margin="16,0,0,0">
                    <Label Text="Check Location"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{StaticResource White}" />
                    <Label Text="Find current item location"
                           FontSize="14"
                           TextColor="{StaticResource White}"
                           Opacity="0.9" />
                </StackLayout>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollView Grid.Row="1" Padding="24">
            <StackLayout Spacing="24">
                <!-- Search Card -->
                <Border BackgroundColor="{StaticResource White}"
                        Stroke="Transparent"
                        Padding="24">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource Black}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>

                    <StackLayout Spacing="16">
                        <Label Text="Item Search"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray900}" />

                        <!-- Item ID Field -->
                        <StackLayout Spacing="8">
                            <Label Text="Item ID / Barcode"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray600}" />
                            <Grid ColumnDefinitions="*,Auto,Auto">
                                <Border Grid.Column="0"
                                        BackgroundColor="{StaticResource Gray100}"
                                        Stroke="{StaticResource Gray300}"
                                        StrokeThickness="1"
                                        Padding="16,12">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8" />
                                    </Border.StrokeShape>
                                    <Entry x:Name="ItemIdEntry"
                                           Placeholder="Scan or enter item ID"
                                           BackgroundColor="Transparent"
                                           FontSize="16"
                                           TextColor="{StaticResource Gray900}" />
                                </Border>
                                <Button Grid.Column="1"
                                        x:Name="ScanButton"
                                        Text="📷"
                                        BackgroundColor="{StaticResource Secondary}"
                                        TextColor="{StaticResource White}"
                                        FontSize="16"
                                        WidthRequest="48"
                                        HeightRequest="48"
                                        CornerRadius="8"
                                        Margin="8,0,0,0"
                                        Clicked="OnScanClicked" />
                                <Button Grid.Column="2"
                                        x:Name="SearchButton"
                                        Text="🔍"
                                        BackgroundColor="{StaticResource Primary}"
                                        TextColor="{StaticResource White}"
                                        FontSize="16"
                                        WidthRequest="48"
                                        HeightRequest="48"
                                        CornerRadius="8"
                                        Margin="8,0,0,0"
                                        Clicked="OnSearchClicked" />
                            </Grid>
                        </StackLayout>
                    </StackLayout>
                </Border>

                <!-- Results Card -->
                <Border x:Name="ResultsCard"
                        BackgroundColor="{StaticResource White}"
                        Stroke="Transparent"
                        Padding="24"
                        IsVisible="False">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource Black}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>

                    <StackLayout Spacing="16">
                        <Label Text="Item Location Details"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray900}" />

                        <!-- Item Info -->
                        <StackLayout Spacing="12">
                            <Grid ColumnDefinitions="Auto,*">
                                <Label Grid.Column="0"
                                       Text="Item ID:"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Gray600}"
                                       WidthRequest="100" />
                                <Label Grid.Column="1"
                                       x:Name="ItemIdResultLabel"
                                       FontSize="14"
                                       TextColor="{StaticResource Gray900}" />
                            </Grid>

                            <Grid ColumnDefinitions="Auto,*">
                                <Label Grid.Column="0"
                                       Text="Status:"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Gray600}"
                                       WidthRequest="100" />
                                <Border Grid.Column="1"
                                        x:Name="StatusBorder"
                                        BackgroundColor="{StaticResource Success}"
                                        Padding="8,4"
                                        HorizontalOptions="Start">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12" />
                                    </Border.StrokeShape>
                                    <Label x:Name="StatusLabel"
                                           Text="Available"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource White}" />
                                </Border>
                            </Grid>
                        </StackLayout>

                        <!-- Location Info -->
                        <Border BackgroundColor="{StaticResource PrimaryLight}"
                                Stroke="{StaticResource Primary}"
                                StrokeThickness="2"
                                Padding="20">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>

                            <StackLayout Spacing="8">
                                <Label Text="📍 Current Location"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Primary}" />
                                <Label x:Name="LocationLabel"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Primary}" />
                                <Label x:Name="LocationDetailsLabel"
                                       FontSize="14"
                                       TextColor="{StaticResource Primary}"
                                       Opacity="0.8" />
                            </StackLayout>
                        </Border>

                        <!-- Additional Info -->
                        <StackLayout Spacing="8">
                            <Label Text="Additional Information"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}" />
                            
                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="Last Moved:"
                                       FontSize="14"
                                       TextColor="{StaticResource Gray600}"
                                       WidthRequest="100" />
                                <Label Grid.Row="0" Grid.Column="1"
                                       x:Name="LastMovedLabel"
                                       FontSize="14"
                                       TextColor="{StaticResource Gray900}" />

                                <Label Grid.Row="1" Grid.Column="0"
                                       Text="Moved By:"
                                       FontSize="14"
                                       TextColor="{StaticResource Gray600}"
                                       WidthRequest="100" />
                                <Label Grid.Row="1" Grid.Column="1"
                                       x:Name="MovedByLabel"
                                       FontSize="14"
                                       TextColor="{StaticResource Gray900}" />

                                <Label Grid.Row="2" Grid.Column="0"
                                       Text="Category:"
                                       FontSize="14"
                                       TextColor="{StaticResource Gray600}"
                                       WidthRequest="100" />
                                <Label Grid.Row="2" Grid.Column="1"
                                       x:Name="CategoryLabel"
                                       FontSize="14"
                                       TextColor="{StaticResource Gray900}" />
                            </Grid>
                        </StackLayout>
                    </StackLayout>
                </Border>

                <!-- Quick Actions -->
                <StackLayout x:Name="QuickActionsSection" 
                             Spacing="12"
                             IsVisible="False">
                    <Label Text="Quick Actions"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Gray600}" />

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <Button Grid.Column="0"
                                x:Name="MoveThisItemButton"
                                Text="Move This Item"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="{StaticResource White}"
                                FontSize="14"
                                HeightRequest="44"
                                CornerRadius="8"
                                Clicked="OnMoveThisItemClicked" />

                        <Button Grid.Column="1"
                                x:Name="SearchAnotherButton"
                                Text="Search Another"
                                BackgroundColor="Transparent"
                                TextColor="{StaticResource Gray600}"
                                BorderColor="{StaticResource Gray300}"
                                BorderWidth="1"
                                FontSize="14"
                                HeightRequest="44"
                                CornerRadius="8"
                                Clicked="OnSearchAnotherClicked" />
                    </Grid>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>